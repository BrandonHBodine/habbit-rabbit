<div class="container">
  <div class="row header">
    <div class="col-md-12">
      <img src="http://www.clipartlord.com/wp-content/uploads/2014/04/bunny-face.png" class="logo" height="100rem" width="100rem" />
      <h1 class="title">Habbit
        <br> Rabbit</h1>
    </div>
    <div class="col-md-12 text-center subtitle">
      <h2 class="subtitleText">Nice Work! You're on a
        {{#longestStreak}}{{this.longestStreak}}{{/longestStreak}} day
        {{#streakHabit}}{{this.streakHabit}}{{/streakHabit}} streak!</h2>
    </div>
  </div>

  <div class="col-md-3 sidebar">
    <div class="row">
      <div class="col-md-10 text-center">
        <div class="row sidebarTitle">
          <h3>Habits</h3>
        </div>
        <div class="row">
          <div class="col-md-12">
            <ul class="habitsListTitle">
              {{#habits}}
                <li class="row habitsList">
                  <div class="habitsListItems pull-left">{{this.habits}}</div>
                  <div class="btn btn-info pull-right">+ Did Today</div>
                </li>
              {{/habits}}
            </ul>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <a href="/users/1/habits/create">
              <div class="btn-lg btn-success">+ Add a Habit</div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-9 showcase">
    <!-- everything below here until next comment can be replaced -->
    <div class="row">
      <h3>Welcome To habit rabbit {{username}}</h3>
      <p>
        Better hop to it and add some habits!
      </p>
    </div>
    <div class="row">
      <div class="col-md-10">
      </div>
    </div>
    <!-- everything above here until next comment can be replaced -->
  </div>

</div>
